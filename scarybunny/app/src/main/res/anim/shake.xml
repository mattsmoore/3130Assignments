<!-- source: https://stackoverflow.com/questions/14680338/how-can-i-make-vibrate-animation-for-imageview -->

<set xmlns:android="http://schemas.android.com/apk/res/android">

    <translate android:duration="150"
        android:fromXDelta="-10%"
        android:repeatCount="5"
        android:repeatMode="reverse"
        android:toXDelta="10%"/>
    <scale
        android:repeatCount="5"
        android:repeatMode="reverse"
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="2"
        android:toYScale="2"
        android:pivotX="50%p"
        android:pivotY="50%p"
        android:duration="50"/>
</set>
